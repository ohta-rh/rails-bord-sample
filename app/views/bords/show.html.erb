<div class="hero-unit">
	<h1><%= @bord.title %></h1>
</div>

<table class="table table-striped">
	<% if @bord.comments.any? %>
		<% @bord.comments.each do |comment| %>
		<tr>
			<td><%= comment.body %></td>
			<td>投稿者：<%= comment.name %></td>
		</tr>
		<% end %>
	<% else %>
		<tr>
			<td>コメントがりません</td>
		</tr>
	<% end %>
</table>

<h3>Add Comments</h3>
<%= form_for([@bord, @comment]) do |f| %>
	
	<% if @comment.errors.any? %>
		<ul>
			<% @comment.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end%>
		</ul>
	<% end %>

	<div class='field'>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class='field'>
		<%= f.label :body %>
		<%= f.text_area :body, :rows => 5 %>
	</div>

	<div class='actions'>
		<%= f.submit %>
	</div>
<% end %>

<%= link_to 'スレッド一覧', bords_path %>
